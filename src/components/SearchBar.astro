---
import { Image } from "astro:assets";
import searchIcon from "@/assets/icon-search.svg";

interface Props {
  placeholder?: string;
}

const { placeholder = "Search for movies or TV series" } = Astro.props;
---

<div class="flex items-center gap-4 mb-6">
  <Image src={searchIcon} alt="Search" class="w-6 h-6 md:w-8 md:h-8" loading="eager"/>
  <input 
    type="text" 
    placeholder={placeholder}
    class="flex-1 bg-transparent border-none outline-none text-pure-white font-light text-base md:text-2xl caret-red placeholder:text-pure-white placeholder:opacity-50 focus:placeholder:opacity-0 border-b border-transparent focus:border-greyish-blue transition-all"
    id="search-input"
  />
</div>

